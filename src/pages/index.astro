---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <p class="text-xl py-1">Hey there ðŸ‘‹</p>
    <h1 class="text-5xl font-bold">I'm Jose Centeno</h1>
    <div class="flex items-center gap-4">
      <h2 class="text-3xl py-3 font-bold">Full Stack Developer</h2>
      <div class="badge badge-primary">open to work</div>
    </div>
    <div class="py-2">
      <text class="text-lg">
        Specialized in efficient & scalable development. Transforming ideas into
        code for impactful projects!
      </text>
    </div>
    <div class="mt-8">
      <a
        class="btn btn-outline ml-5"
        href="https://linkedin.com/in/josecentenodev"
        target="_blank"
      >
        Let's connect!</a
      >
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="Animals"
    img="/Animals.png"
    desc="Serverless application using Next.js, MongoDB, Uploadthing and Clerk"
    url="https://animals-josecentenodev.vercel.app"
    badge="New"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Promptopia"
    img="/promptopiaMain.png"
    desc="Promptopia is an open-source AI prompting tool form modern world to discover, create and share creative prompts. In this project I have learned the fundamentals of Next.js 13."
    url="https://share-prompts-josecentenodev.vercel.app"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Gif App"
    img="/GifApp.png"
    desc="With this project I learned advanced React concepts."
    url="https://giffyapp-josecentenodev.vercel.app"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
