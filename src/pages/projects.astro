---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout
  title="Projects"
  sideBarActiveItemID="projects"
>
  <div>
    <div class="text-3xl w-full font-bold mb-5">My projects reside here</div>
  </div>
  <HorizontalCard
    title="Event Ticketing"
    img="/ClorianFrontend.png"
    desc="A frontend test for JR with React, Typescript, Redux-Toolkit and Test Automation with Vitest and react-testing-library"
    url="https://ecommercefrontendtest.vercel.app/"
    badge="New"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
  title="Taller de Desarrollo"
  img="/tallerdedesarrollomain.png"
  desc="Taller de Desarrollo landing page"
  url="https://tallerdedesarrollo.vercel.app/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Animals"
    img="/Animals.png"
    desc="Serverless application using Next.js, MongoDB, Uploadthing and Clerk, it's the first deploy and is not yet finished"
    url="https://animals-josecentenodev.vercel.app"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Promptopia"
    img="/promptopiaMain.png"
    desc="Discover the best prompts from the community for use with artificial intelligence models. Development with Next.js."
    url="https://share-prompts-josecentenodev.vercel.app"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Gif App"
    img="/GifApp.png"
    desc="Developed with React, a GIF search app featuring infinite scroll."
    url="https://giffyapp-josecentenodev.vercel.app"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Meowter"
    img="/MeowterChat.png"
    desc="Comments page implemented with Next.js. Provides real-time updates on the publication date."
    url="https://meowter-josecentenodev.vercel.app"
  />
</BaseLayout>
