---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">My projects reside here</div>
  </div>

  <HorizontalCard
    title="Flexibble"
    img="/FlexibbleMain.png"
    desc="Aplicación con Next.js 14 y Grafbase para que desarrolladores puedan compartir proyectos personales."
    url="https://grafbase-flexibble-beta-three.vercel.app"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Promptopia"
    img="/promptopiaMain.png"
    desc="Descubre los mejores prompts de la comunidad para usar con modelos de inteligencia artificial. Desarrollo con Next.js."
    url="https://share-prompts-josecentenodev.vercel.app"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Gif App"
    img="/GifApp.png"
    desc="Desarrollada con React, una App para buscar Gifs que cuenta con scroll infinito."
    url="https://giffyapp-josecentenodev.vercel.app"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Meowter"
    img="/MeowterChat.png"
    desc="Chat realizado con Next.js. Cuenta con actualización en tiempo real sobre la fecha de publicación"
    url="https://meowter-josecentenodev.vercel.app"
  />